{
  "name": "autocausallm-huggingface-app",
  "description": "autocausallm for chatting - HF",
  "attributes": {
    "Provider": "Hugging Face",
    "License": "Apache 2.0",
    "Category": "Model",
    "NLP": "Conversational",
    "Gen AI": "LLM"
  },
  "displayName": "autocausaLLM",
  "version": "v0.1.10",
  "scope": "project",
  "codebase": {
    "type": "git",
    "gitUrl": "https://github.com/dataloop-ai-apps/huggingface-adapter.git",
    "gitTag": "v0.1.10"
  },
  "components": {
    "computeConfigs": [
      {
        "name": "autocausallm-huggingface-deploy",
        "versions": {
          "dtlpy": "1.89.6"
        },
        "secrets": [],
        "runtime": {
          "podType": "gpu-t4",
          "concurrency": 1,
          "autoscaler": {
            "type": "rabbitmq",
            "minReplicas": 0,
            "maxReplicas": 2,
            "queueLength": 1000
          },
          "preemptible": false
        }
      }
    ],
    "modules": [
      {
        "name": "autocausallm-module",
        "entryPoint": "model_adapter.py",
        "className": "ModelAdapter",
        "computeConfig": "autocausallm-huggingface-deploy",
        "initInputs": [
          {
            "type": "Model",
            "name": "model_entity"
          }
        ],
        "functions": [
          {
            "name": "predict_items",
            "input": [
              {
                "type": "Item[]",
                "name": "items",
                "description": "The input images for prediction."
              }
            ],
            "output": [
              {
                "type": "Item[]",
                "name": "items",
                "description": "The same input images for prediction."
              },
              {
                "type": "Annotations[]",
                "name": "annotations",
                "description": "The predicted annotations."
              }
            ],
            "displayName": "Predict Items",
            "displayIcon": "",
            "description": "The inference function of the model."
          }
        ]
      }
    ],
    "models": [
      {
        "name": "autocausallm-huggingface-model",
        "moduleName": "autocausallm-module",
        "scope": "project",
        "status": "trained",
        "configuration": {
          "weights_filename": "dialogpt.pt",
          "module_name": "adapters.autocausallm.autocausallm",
          "model_name": "microsoft/DialoGPT-large",
          "tokenizer": "microsoft/DialoGPT-large",
          "device": "cuda:0"
        },
        "metadata": {},
        "description": "Flexible autocausalLM adapter for HF models"
      }
    ]
  }
}